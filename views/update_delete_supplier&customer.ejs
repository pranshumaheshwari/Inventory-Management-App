<% include partials/header.ejs %>
<div class="container jumbotron">
	<h1 align="center">Update/Delete <%=type.charAt(0).toUpperCase() + type.slice(1)%></h1>
	<br>
	<form action="/<%=type%>/<%= data.code %>?_method=PUT" method="POST" onsubmit="return confirm('Are you sure you wan to update this <%=type%>?');">
		<div class="row">
			<div class="col-md">
				<label for="supplier.name">Name</label>
				<input autocomplete="off" type="text" value="<%= data.name %>" id="supplier.name" name="data[name]" class="form-control" required>
			</div>
		</div>
		<div class="row">
			<div class="col-md">
				<label for="supplier.code">Code</label>
				<input autocomplete="off" type="text" value="<%= data.code %>" id="supplier.code" name="data[code]" class="form-control" required>
			</div>
		</div>
		<br>
		<h4>Address Details</h4>
		<div class="row">
			<div class="col-md-6">
				<label for="supplier.address1">Address 1</label>
				<input autocomplete="off" type="text" value="<%= data.address1 %>" id="supplier.address1" name="data[address1]" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="supplier.address2">Address 2</label>
				<input autocomplete="off" type="text" value="<%= data.address2 %>" id="supplier.address2" name="data[address2]" class="form-control" placeholder="Address 2" >
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<label for="supplier.city">City</label>
				<input autocomplete="off" type="text" value="<%= data.city %>" id="supplier.city" name="data[city]" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="supplier.state">State</label>
				<input autocomplete="off" type="text" value="<%= data.state %>" id="supplier.state" name="data[state]" class="form-control" required>
			</div>
		</div>
		<br>
		<h4>GST Details</h4>
		<div class="row">
			<div class="col-md-6">
				<label for="">GST No</label>
				<input autocomplete="off" type="text" value="<%= data.GST_no %>" id="supplier.GST_no" name="data[GST_no]" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="">PAN No</label>
				<input autocomplete="off" type="text" value="<%= data.PAN_no %>" id="supplier.PAN_no" name="data[PAN_no]" class="form-control" required>
			</div>
		</div>
		<br>
		<button type="submit" class="btn btn-success">Update</button>
	</form>
	<br><br>
	<form action="/<%=type%>/<%= data.code %>?_method=DELETE" method="POST">
		<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this <%=type%>?');">Delete</button>
	</form>
</div>
<% include partials/footer.ejs %>
