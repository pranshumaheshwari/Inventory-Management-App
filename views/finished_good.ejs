<% include partials/header.ejs %>
<br>
<h1 align="center">Finished Goods</h1>
<br>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
			<form action="/finished_good/search/category" method="post" class="form-inline">
				<select name="category" class="form-control">
					<option value="" hidden selected>Select Category</option>
					<option value="Fuse Box">Fuse Box</option>
					<option value="Indicator">Indicator</option>
					<option value="Magneto">Magneto</option>
					<option value="Battery Cable">Battery Cable</option>
					<option value="Lead Wires">Lead Wires</option>
					<option value="Piaggio">Piaggio</option>
					<option value="Pigtail">Pigtail</option>
					<option value="Spare Part (SPD)">Spare Part (SPD)</option>
				</select>
				<button type="submit" class="btn btn-dark">Go!</button>
			</form>
		</div>
		<div class="col-md-6"></div>
		<div class="col-md-2">
			<a href="finished_good/reset" class="btn btn-danger btn-block" style="float:right;">Reset Schedule</a>
		</div>
	</div>
	<br><br>
	<table class="table table-striped table-bordered table-hover">
		<thead class="thead-dark">
			<tr>
				<th>#</th>
				<th>Description</th>
				<th>Part Number</th>
				<th>Category</th>
				<th>Customer</th>
				<th>Stock</th>
				<th>Schedule Quantity</th>
				<th>#</th>
			</tr>
		</thead>
		<tbody>
			<% for(var i=0;i<finished_goods.length;i++){ %>
				<tr>
					<td><%= i+1 %></td>
					<td><%= finished_goods[i].name %></td>
					<td><%= finished_goods[i].code %></td>
					<td><%= finished_goods[i].category %></td>
					<td><%= finished_goods[i].customer %></td>
					<td><%= finished_goods[i].stock %></td>
					<td><%= finished_goods[i].quantity %></td>
					<td><a href="/finished_good/<%= finished_goods[i].code %>" class="btn btn-info btn-block">Edit</td>
				</tr>
			<% } %>
		</tbody>
	</table>
	<a href="/BOM" class="btn btn-dark" style="position:fixed;bottom:5px;">Change Schedule</a>
	<a href="/finished_good/mock" class="btn btn-secondary" style="position:relative;float:center;left:650px">Mock Schedule<a>
	<a href="/finished_good/new" class="btn btn-dark" style="float:right;bottom:10px;">New Finished Good </a>
</div>
<% include partials/footer.ejs %>