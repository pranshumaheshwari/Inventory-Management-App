<% include partials/header.ejs %>
<br>
<h1 align="center">Schedule Tracker For <%= month %> Month</h1>
<table class="table table-striped table-bordered table-hove">
	<thead class="thead-dark">
		<tr>
			<th>Part Number</th>
			<th>Category</th>
			<th>Schedule</th>
			<% for(var i=0;i<date;i++){ %>
				<th><%= i+1 %></th>
			<% } %>
			<th>Total</th>
			<th>Balance</th>
		</tr>
	</thead>
	<tbody>
		<% for(var i=0;i<finished_goods.length;i++){ %>
			<tr>
				<td><%= finished_goods[i].code %></td>
				<td><%= finished_goods[i].category %></td>
				<td><%= finished_goods[i].quantity %></td>
				<% var t = 0 %>
				<% for(var j=1;j<=date;j++){ %>
					<td>
						<% var got = 0 %>
						<% for(var k=0;k<finished_goods[i]["dispatch"].length;k++){ %>
							<% if(finished_goods[i]["dispatch"][k].date.getDate() === j){ %>
								<%= finished_goods[i]["dispatch"][k].quantity %>
								<% t += finished_goods[i]["dispatch"][k].quantity %>
								<% got = 1 %>
							<% } %>
						<% } %>
						<% if(got === 0){ %>
							0
						<% } %>
					</td>
				<% } %>
				<td><%= t %></td>
				<td><%= finished_goods[i].quantity - t %></td>
			</tr>
		<% } %>
	</tbody>
</table>

<script type="text/javascript">
	new TableExport(document.getElementsByTagName("table"),{bootstrap:false,headers:true,formats:['csv','xls'],ignoreCols:[]});
</script>

