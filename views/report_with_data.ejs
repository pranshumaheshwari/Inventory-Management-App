<% include partials/header.ejs %>
<br>
<h1 align="center">Report By PO</h1>
<div class="container">
	<form action="/report/PO/<%= PO.code %>" method="get">
		<div class="jumbotron">
			<div class="row">
				<div class="col-md-6">
					<label>PO Number: <input type="text" value="<%= PO.code %>" class="form-control-plaintext"></label>
				</div>
				<div class="col-md-6">
					<label>Date: <input type="text" value="<%= PO.date.toISOString().substring(0,10) %>" class="form-control-plaintext"></label>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<label>Supplier Name: <input type="text" value="<%= supplier.name %>" class="form-control-plaintext"></label>
				</div>
				<div class="col-md-4">
					<label>Supplier Code: <input type="text" value="<%= supplier.code %>" class="form-control-plaintext"></label>
				</div>
				<div class="col-md-4">
					<label>Status: <input type="text" value="<%= PO.pending %>" class="form-control-plaintext"></label>
				</div>
			</div>
		</div>
		<br>
		<table class="table table-striped table-bordered table-hover">
			<thead class="thead-dark">
				<tr>
					<th>DTPL Part Number</th>
					<th>Description</th>
					<th>PO Quantity</th>
					<th>Recieved Quantity</th>
					<th>Balance Quantity</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i=0;i<POs.length;i++){ %>
					<tr>
						<td><%= POs[i].DTPL_code %></td>
						<td><%= POs[i].raw_desc %></td>
						<td><%= POs[i].initial_quantity %></td>
						<td><%= POs[i].initial_quantity - POs[i].quantity %></td>
						<td><%= POs[i].quantity %></td>
					</tr>
				<% } %>
			</tbody>
		</table>
		<br>
		<button type="submit" class="btn btn-success">View Details</button>
	</form>
</div>
<script type="text/javascript">
	new TableExport(document.getElementsByTagName("table"),{bootstrap:false,headers:true,formats:['csv','xls','xlsx'],ignoreCols:[]});
</script>
<% include partials/footer.ejs %>